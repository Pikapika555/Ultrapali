											i.icon-cog
											|	Settings
									li(id="liSiStat")
										a(href="/statistic")
											i.icon-indent-left
											|	Statistic
									li.divider
									li.nav-header Admin Menu
									li
										a(href="/adminUser")
											i.icon-star
											|	Manage Users
									li
										a(href="/adminRequests")
											i.icon-headphones
