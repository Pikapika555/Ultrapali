		#Content
			.midContent
			.container
				div.row
					#AjaxContent.span9
						include slides/slideDash
					div.span3
						div.sidebar-nav
							div.well.d
								ul.nav.nav-list(id="ulSideNav")
									//li.divider
									li
										blockquote
											- if(!navi.user)
												h4 BandName Eintragen
											- else
												h4 #{navi.user}
											small #{navi.email}
									li.divider
									li.nav-header Band Menu
									li.active(id="liSiDash")
										a(href="/dashboard") 
											i.icon-home
											|   Dashboard
									li(id="liSiUpl")
										a(href="/upload")
											i.icon-share
											|	Upload Songs
									li(id="liSiSett")
